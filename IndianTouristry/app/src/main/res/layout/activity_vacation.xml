<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VacationActivity">

        <LinearLayout
            android:id="@+id/Linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageLabel"
                android:layout_width="wrap_content"
                android:layout_height="227dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/long1b" />

            <TextView
                android:id="@+id/textLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageLabel"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="5 days in Manali, Spiti Valley (196Km, 4hrs, 4.3⭐)"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageLabel2"
                android:layout_width="wrap_content"
                android:layout_height="227dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/hills5" />

            <TextView
                android:id="@+id/textLabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageLabel"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="4 days in Bangalore, Coorg(267Km, 5hrs, 3.5⭐)"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageLabel3"
                android:layout_width="wrap_content"
                android:layout_height="227dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/long3b" />

            <TextView
                android:id="@+id/textLabel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageLabel"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="4 days in Mumbai, Alibaug(92Km, 3hrs, 3.8⭐)"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageLabel4"
                android:layout_width="wrap_content"
                android:layout_height="227dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/long4a" />

            <TextView
                android:id="@+id/textLabel4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageLabel"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="5 days in Mahabaleswar,Panchgani(18km, 3hrs, 3.6)"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageLabel5"
                android:layout_width="wrap_content"
                android:layout_height="227dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/long5a" />

            <TextView
                android:id="@+id/textLabel5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageLabel"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="5 days in Shimla, Tirthan Valley(176Km, 4hrs, 3.6⭐)"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageLabel6"
                android:layout_width="wrap_content"
                android:layout_height="227dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/long6a" />

            <TextView
                android:id="@+id/textLabel6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageLabel"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="4 days in Ooty, Madumalai(38Km, 1hr, 3.5⭐)"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageLabel7"
                android:layout_width="wrap_content"
                android:layout_height="227dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/long7a" />

            <TextView
                android:id="@+id/textLabel7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageLabel"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="4 days in Auli, Joshimath(10Km, 0hrs, 3.3⭐)"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageLabel8"
                android:layout_width="wrap_content"
                android:layout_height="227dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/long8a" />

            <TextView
                android:id="@+id/textLabel8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageLabel"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="4 days in Kodaikanal, Idukki(153Km, 4hrs, 3.3⭐)"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>